    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ],
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/**"
            ],
            "program": "${workspaceFolder}/dist/index.js",
            "envFile": "${workspaceFolder}/.env"
        }
    ]
}